<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ProgressBar 
		android:id="@+id/description_loading"
		style="?android:attr/progressBarStyleLarge"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:visibility="gone" />

		<ScrollView
    		android:id="@+id/ScrollView1"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent" >

    	<RelativeLayout
        		android:id="@+id/description_relLayout"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" >

        		<TextView
            		android:id="@+id/title"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerHorizontal="true"
            		android:text=""
            		android:textAppearance="?android:attr/textAppearanceMedium"
            		android:textStyle="bold" />

        		<RatingBar
            		android:id="@+id/ratings"
            		android:layout_width="wrap_content"
            		android:focusable="false"
            		android:layout_height="wrap_content"
            		android:layout_below="@id/title"
            		android:layout_centerHorizontal="true"
            		android:numStars="5"
            		android:visibility="invisible" />
        		
        		<TextView
       				android:id="@+id/description"
       				android:layout_below="@id/ratings"
       				android:layout_width="wrap_content"
       				android:layout_height="wrap_content"
       				android:layout_marginTop="10dp"
       				android:textStyle="italic" />

        		<TableLayout
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:layout_below="@id/description" >

        		    <TableRow
        		        android:id="@+id/price_row"
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content" >
        		        
        		        <TextView
        		    		android:id="@+id/best_price"
        		    		android:layout_width="wrap_content"
        		    		android:layout_height="wrap_content"
        		    		android:text="@string/best_price"
        		    		android:layout_marginTop="10dp"
        		    		android:textStyle="bold"
        		    		android:visibility="gone" />
        		        
        		        <TextView
        		   			android:id="@+id/price"
        		    		android:maxLines="1"
        		    		android:layout_width="wrap_content"
        		    		android:layout_height="wrap_content"
        		    		android:layout_marginTop="10dp"
        		    		android:textStyle="italic"
        		    		android:visibility="visible" />
        		        
        		    </TableRow>

        		    <TableRow
        		        android:id="@+id/allergen_row"
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content" >
        		        
        		    	<TextView
        		    		android:id="@+id/allergens"
        		    		android:maxLines="1"
        		    		android:layout_width="wrap_content"
        		    		android:layout_height="wrap_content"
        		    		android:layout_marginTop="10dp"
        		    		android:text="@string/allergen_prefix"
        		    		android:visibility="gone"
        		    		android:textStyle="bold" />
        		    
        		    </TableRow>

        		    <TableRow
        		        android:id="@+id/suggestion_row"
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content" >
        		        
        		        <TextView
        		    		android:id="@+id/suggestions"
        		    		android:maxLines="20"
        		    		android:layout_width="wrap_content"
        		    		android:layout_height="wrap_content"
        		    		android:layout_marginTop="10dp"
        		    		android:text="@string/suggestion_prefix"
        		    		android:visibility="gone"
        		    		android:textStyle="italic" />
        		        
        		    </TableRow>
        		</TableLayout>

    		</RelativeLayout>

		</ScrollView>

</RelativeLayout>